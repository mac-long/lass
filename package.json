{
	"name": "lass",
	"description": "Lass (Leagues as a Service) is an application for creating League Tables.",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@fontsource/poppins": "^4.5.10",
		"@supabase/auth-helpers-sveltekit": "^0.9.0",
		"@supabase/auth-ui-shared": "^0.1.3",
		"@supabase/auth-ui-svelte": "^0.1.4",
		"@supabase/supabase-js": "^2.10.0",
		"@sveltejs/adapter-vercel": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.14",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.5",
		"vite": "^4.0.0",
		"vitest": "^0.29.8"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [
			"prettier-plugin-svelte"
		],
		"pluginSearchDirs": [
			"."
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"eslint:recommended",
			"prettier"
		],
		"plugins": [
			"svelte3"
		],
		"overrides": [
			{
				"files": [
					"*.svelte"
				],
				"processor": "svelte3/svelte3"
			}
		],
		"parserOptions": {
			"sourceType": "module",
			"ecmaVersion": 2020
		},
		"env": {
			"browser": true,
			"es2017": true,
			"node": true
		}
	},
	"type": "module"
}
